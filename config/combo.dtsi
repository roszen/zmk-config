/ {
  combos {
    compatible = "zmk,combos";

    combo_esc {
      timeout-ms = <50>;
      key-positions = <31 32>; // j k
      bindings = <&kp ESC>;
    };

    combo_def {
      timeout-ms = <50>;
      key-positions = <45 46 47 48>; // m , . /
      bindings = <&to DEF>;
    };

    combo_bkp {
      timeout-ms = <50>;
      key-positions = <37 38 39 40>; // z x c v
      bindings = <&to BKP>;
    };
  };
};
